# Discord Bot Environment Variables
# Copy this to .env and fill in your values

# REQUIRED - Get from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# OPTIONAL - Guild ID for faster slash command registration
DISCORD_GUILD_ID=your_discord_server_id

# REQUIRED - Channel IDs for chat sync
DISCORD_CHAT_CHANNEL=your_chat_channel_id
DISCORD_LOG_CHANNEL=your_log_channel_id

# Minecraft RCON connection
MC_RCON_HOST=yamabiko.proxy.rlwy.net
MC_RCON_PORT=25575
MC_RCON_PASSWORD=kingdomcraft

# Express port (Railway sets this automatically)
PORT=3000
