# Continents Discord Bot Environment Variables
# Copy this to .env and fill in your values

# REQUIRED - Get from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Guild ID for slash command registration
GUILD_ID=your_discord_server_id

# Channel IDs
CHAT_CHANNEL_ID=channel_for_mc_chat_sync
EVENTS_CHANNEL_ID=channel_for_death_events
LOG_CHANNEL_ID=channel_for_all_logs
STATUS_CHANNEL_ID=channel_for_live_server_status_embed

# HTTP Bridge authentication (must match MC plugin config)
MC_API_KEY=kc-bridge-2025

# Web panel password
PANEL_PASSWORD=kc-panel-2025

# Express port (Railway sets this automatically)
PORT=3000
